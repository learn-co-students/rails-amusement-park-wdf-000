<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="1">Picture</th>
      <th colspan="1">Name</th>
      <th colspan="1">Tickets</th>
      <th colspan="1">Details</th>
    </tr>
  </thead>
  <tbody>
    <% @attractions.each do |attraction| %>
      <tr>
        <td><img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" width="100"></td>
        <td><%= attraction.name %></td>
        <td><%= attraction.tickets %></td>
        <% if admin? %>
          <td><a href="<%= attraction_path(attraction.id) %>">Show <%= attraction.name %></a></td>
        <% else %>
          <td><a href="<%= attraction_path(attraction.id) %>">Go on <%= attraction.name %></a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
