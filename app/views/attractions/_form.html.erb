<h1> Create a New Attraction </h1>

<%= form_for @attraction do |f| %>
  <%= f.label :name %> <br />
  <%= f.text_field :name %> <br />

  <%= f.label :min_height %> (in inches) <br />
  <%= f.number_field :min_height %> <br />

  <%= f.label :happiness_rating %> (1 - 5 scale) <br />
  <%= f.number_field :happiness_rating %> <br />

  <%= f.label :nausea_rating %> (1 - 5 scale) <br />
  <%= f.number_field :nausea_rating %> <br />

  <%= f.label :tickets %> you possess <br />
  <%= f.number_field :tickets %> <br />

  <br />
  <%= f.submit class: "btn btn-primary" %>
<% end %>

