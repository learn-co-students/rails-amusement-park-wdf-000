<h3>Listing Attractions</h3>
<% @attractions.each do |attraction| %>
  <tr>
    <td><%= attraction.name %></td>
    <td><%= attraction.tickets %></td>

    <% if current_user.admin %>
      <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></td><br>
    <% else %>
      <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td><br>
    <% end %>
  </tr>
<% end %>

<% if @user %>
  <p><%= link_to "Back to profile", user_path(@user), {:class => "btn btn-primary"} %></p>
<% else %>
  <p><%= link_to "New Attraction", new_attraction_path %></p>

<% end %>
