
<%= render partial: 'attraction', locals: {attraction: @attraction, user_admin: @user.admin} %> <br>

<%= form_tag(take_ride_path, method: "post") do %>
  <%= hidden_field_tag(:user_id, @user.id) %>
  <%= hidden_field_tag(:attraction_id, @attraction.id) %>
  <%= submit_tag("Go on this ride") %>
<% end %>

<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
