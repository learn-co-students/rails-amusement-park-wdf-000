<div class="container-fluid" role="main">
  <div class="row">
    <div class="col-md-4 col-sm-6">
      <img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" class="img-responsive img-thumbnail">
    </div>
    <div class="col-md-8 col-sm-6 info">
      <p>Name: <%= @attraction.name %></p>
      <p>Total Number of Users: <%= @attraction.users.count %></p>
      <p>Ticket Requirement: <%= @attraction.tickets %></p>
      <p>Height Requirement: <%= @attraction.min_height %></p>
      <p>Nausea Rating: <%= @attraction.nausea_rating %></p>
      <p>Happiness Rating: <%= @attraction.happiness_rating %></p>
      <% if admin? %>
        <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %><br>
      <% else %>
        <%= button_to "Go on this ride", rides_path, params: {user_id: current_user_id, attraction_id: @attraction.id}, class:"btn btn-default" %>
      <% end %>
      <%= link_to 'Back', attractions_path %>
    </div>
  </div>
</div>
