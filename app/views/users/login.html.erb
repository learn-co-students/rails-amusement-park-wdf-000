<h1>Log In</h1>
<%= form_for @user, :url => url_for(:controller => 'users', :action => 'now') do |f| %>
  <h2>
    <%= f.label 'ID'  %>
    <%= f.collection_select :id, User.all, :id , :name%>
  </h2>
  <h2>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </h2>
  <h2>
    <%= f.label :admin %>
    <%= f.check_box :admin, id:"user_admin" %>
  </h2>
  <h2><%= f.submit "Sign In" %></h2>
<% end %>
